    <div class="form update-prompt-form">
      <div class="chat-prompt">
        <h4 class="user">{{user.user}}</h4>
        <p class="text-area">{{chat_prompt}}</p>
      </div>
      <div class="chat-response">
        <h4 class="user">Chatstrology</h4>
        <p class="text-area">{{chat_response}}</p>
      </div>
    </div>
    <div class="form comment-form">
      {{#if chatquestions.length}}
        {{#each chatquestions as |chatquestion|}}
          <div class="chat-prompt">
            <h4 class="user">User{{user.user}}</h4>
            <p class="text-area">{{chat_question}}</p>
          </div>
          <div class="chat-response">
            <h4 class="user">Chatstrology</h4>
            <p class="text-area">{{chat_question_response}}</p>
          </div>
        {{/each}}
      {{/if}}
    </div>

    <form class="form new-prompt-form">
      <div class="form-group">
       <!-- <p>Blog id: {{id}}</p> -->
        <label for="new-prompt-id">Add new Prompt:</label>
        <input class= "prompt-input" type="text" id="new-prompt-id" data-promptid={{id}}>
        <!--<input class= "comment-input" type="text" id="new-comment-id" />-->
      </div>
       <div>
        <button class="btn btn-primary">Submit</button>
      </div>
    </form>
</div>

